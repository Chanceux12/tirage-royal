<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Ouvrir un compte VANTEX</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" />

<style>

/* === FOND GLOBAL === */
body {
    margin: 0;
    font-family: "Inter", Arial, sans-serif;
    background: linear-gradient(135deg, #0A9999, #087C7C);
    min-height: 100vh;
    padding: 20px;
    color: #fff;
}

/* === CARD BANCAIRE === */
.container {
    max-width: 900px;
    margin: 40px auto;
    background: #ffffff;
    border-radius: 18px;
    padding: 30px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.25);
    color: #1a1a1a;
}

/* HEADER */
.form-title {
    text-align: center;
    margin-bottom: 25px;
}
.form-title h1 {
    font-size: 2rem;
    margin: 0;
    color: #0A9999;
    font-weight: 800;
}
.form-title p {
    margin: 4px 0 0;
    color: #444;
}

/* === CHAMPS BANQUE PREMIUM === */

.field-container {
    margin-bottom: 20px;
}

label {
    display: block;
    font-weight: 600;
    margin-bottom: 6px;
    color: #0A9999;
}

/* Champ style bancaire */
input, select {
    width: 100%;
    padding: 14px;
    font-size: 1rem;
    border-radius: 10px;
    border: 1.7px solid #cfd8dc;
    background: #fdfdfd;
    transition: all 0.2s ease-in-out;
}

input:focus, select:focus {
    border-color: #0A9999;
    box-shadow: 0 0 6px rgba(10,153,153,0.4);
    outline: none;
}

/* ROWS */
.row {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
}
.col {
    flex: 1;
    min-width: 220px;
}

/* === BOUTON PREMIUM === */
.btn {
    width: 100%;
    padding: 15px;
    background: #0A9999;
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 1.2rem;
    font-weight: 700;
    cursor: pointer;
    transition: 0.25s;
}

.btn:hover {
    background: #066b6b;
}

/* Responsive */
@media (max-width: 780px) {
    .container {
        padding: 20px;
    }
    .form-title h1 {
        font-size: 1.7rem;
    }
}

</style>
</head>

<body>

<div class="container">
    <div class="form-title">
        <h1>Ouvrir un compte VANTEX</h1>
        <p>Inscription rapide & sécurisée</p>
    </div>

    <form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

        <div class="row">
            <div class="col field-container">
                <label>Civilité *</label>
                <select name="civility" required>
                    <option value="">Sélectionner</option>
                    <option>M.</option>
                    <option>Mme</option>
                    <option>Mlle</option>
                </select>
            </div>

            <div class="col field-container">
                <label>Prénom *</label>
                <input type="text" name="firstname" required>
            </div>

            <div class="col field-container">
                <label>Nom *</label>
                <input type="text" name="lastname" required>
            </div>
        </div>

        <div class="row">
            <div class="col field-container">
                <label>Email *</label>
                <input type="email" name="email" required>
            </div>

            <div class="col field-container">
                <label>Téléphone *</label>
                <input type="tel" id="phone" name="phone" required>
            </div>
        </div>

        <div class="field-container">
            <label>Profession *</label>
            <input type="text" name="profession" required>
        </div>

        <div class="row">
            <div class="col field-container">
                <label>Type de pièce *</label>
                <select name="id_type" required>
                    <option value="">Sélectionner</option>
                    <option value="passeport">Passeport</option>
                    <option value="cni">Carte nationale d'identité</option>
                </select>
            </div>

            <div class="col field-container">
                <label>Numéro de pièce *</label>
                <input type="text" name="id_number" required>
            </div>
        </div>

        <div class="row">
            <div class="col field-container">
                <label for="country">Pays *</label>
                <select id="country" name="country" required>
                    <option value="">Chargement...</option>
                </select>
            </div>

            <div class="col field-container">
                <label for="region">Région / Province *</label>
                <select id="region" name="region" required disabled>
                    <option value="">Sélectionnez un pays d'abord</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col field-container">
                <label>Rue *</label>
                <input type="text" name="street" required>
            </div>

            <div class="col field-container">
                <label>Ville *</label>
                <input type="text" name="city" required>
            </div>

            <div class="col field-container">
                <label>Code postal *</label>
                <input type="text" name="zip" required>
            </div>
        </div>

        <div class="field-container">
            <label>Documents d'identité *</label>
            <input type="file" name="id_front" accept=".jpg,.jpeg,.png,.pdf" required>
            <input style="margin-top:10px;" type="file" name="id_back" accept=".jpg,.jpeg,.png,.pdf" required>
        </div>

        <div class="field-container">
            <label style="color:#222;font-weight:600;">
                <input type="checkbox" required> J'accepte les conditions générales
            </label>
        </div>

        <button class="btn">Créer mon compte</button>

    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {

    // TEL
    const phone = document.querySelector("#phone");
    if (phone) {
        window.intlTelInput(phone, {
            separateDialCode: true,
            initialCountry: "fr",
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
        });
    }

    // Country / Region local JSON
    const countrySelect = document.getElementById("country");

    async function loadCountries() {
        const res = await fetch("/json/countries.json");
        const countries = await res.json();

        countries.sort((a, b) => a.name.common.localeCompare(b.name.common));

        countrySelect.innerHTML = "<option value=''>Sélectionnez un pays</option>";

        countries.forEach(c => {
            const opt = document.createElement("option");
            opt.value = c.cca2;
            opt.textContent = c.name.common;
            countrySelect.appendChild(opt);
        });
    }

    async function loadRegions(code) {
        const regionSelect = document.getElementById("region");

        const res = await fetch("/json/regions.json");
        const all = await res.json();
        const regions = all[code] || [];

        if (regions.length === 0) {
            regionSelect.innerHTML = "";
            regionSelect.disabled = true;
            return;
        }

        regionSelect.disabled = false;
        regionSelect.innerHTML = "<option value=''>Sélectionnez</option>";
        regions.forEach(r => {
            const opt = document.createElement("option");
            opt.value = r;
            opt.textContent = r;
            regionSelect.appendChild(opt);
        });
    }

    loadCountries();
    countrySelect.onchange = () => loadRegions(countrySelect.value);

});
</script>

</body>
</html>

