<script>
const phone = document.querySelector("#phone");
window.intlTelInput(phone, { separateDialCode: true, initialCountry: "fr" });


// â€”â€”â€”â€”â€”â€”â€”â€”â€” CHARGER PAYS â€”â€”â€”â€”â€”â€”â€”â€”â€”
async function loadCountries() {
  const res = await fetch("/json/countries.json");
  const countries = await res.json();
  const sel = document.getElementById("country");
  countries.forEach(c => {
    const opt = document.createElement("option");
    opt.value = c.name.common;
    opt.textContent = c.name.common;
    sel.appendChild(opt);
  });
}
loadCountries();


// â€”â€”â€”â€”â€”â€”â€”â€”â€” AFFICHAGE VÃ‰RIFICATION â€”â€”â€”â€”â€”â€”â€”â€”â€”
const fields = ["civility","firstname","lastname","email","phone",
  "profession","country","region","street","city","zip"];

function updateVerify() {
  let html = "";
  fields.forEach(id => {
    const val = document.getElementById(id).value;
    if (val.trim()) {
      html += `<div class="verify-line"><strong>${id} :</strong> ${val}</div>`;
    }
  });
  document.getElementById("verifyContent").innerHTML = html;
}

fields.forEach(id => {
  document.getElementById(id).addEventListener("input", updateVerify);
});
phone.addEventListener("input", updateVerify);


// â€”â€”â€”â€”â€”â€”â€”â€”â€” CGU â€”â€”â€”â€”â€”â€”â€”â€”â€”
