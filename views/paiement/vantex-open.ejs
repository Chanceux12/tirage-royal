<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Ouvrir un compte VANTEX</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" />

<style>

/* === FOND GLOBAL TURQUOISE === */
body {
    margin: 0;
    font-family: "Inter", Arial, sans-serif;
    background: linear-gradient(135deg, #0A9999, #066F6F);
    min-height: 100vh;
    padding: 25px;
    color: #ffffff;
}

/* === CARTE VERRE DEPOLI === */
.container {
    max-width: 900px;
    margin: 40px auto;
    padding: 35px;
    border-radius: 24px;

    /* effet verre dépoli (glassmorphism) */
    background: rgba(255, 255, 255, 0.22);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);

    border: 1px solid rgba(255, 255, 255, 0.22);
    box-shadow: 0 20px 60px rgba(0,0,0,0.30);
}

/* === TITRE === */
h1 {
    text-align: center;
    font-size: 2.3rem;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 5px;
}
h2 {
    text-align: center;
    margin-top: 0;
    color: #e4fafa;
    font-weight: 400;
    font-size: 1.1rem;
}

/* === LABELS FLOTTANTS === */
.field {
    position: relative;
    margin-bottom: 25px;
}

.field input,
.field select {
    width: 100%;
    padding: 14px;
    font-size: 1rem;
    background: rgba(255,255,255,0.90);
    border: 1.6px solid rgba(10,153,153,0.55);
    border-radius: 12px;
    color: #1b1b1b;

    transition: all .3s ease;
}

.field input:focus,
.field select:focus {
    border-color: #ffffff;
    box-shadow: 0 0 8px rgba(255,255,255,0.6);
    outline: none;
}

/* Label flottant */
.field label {
    position: absolute;
    top: 50%;
    left: 14px;
    transform: translateY(-50%);
    background: transparent;
    padding: 0 6px;
    color: #034646;
    font-weight: 600;

    pointer-events: none;
    transition: 0.25s ease;
}

/* Animation flottante */
.field input:focus + label,
.field input:not(:placeholder-shown) + label,
.field select:focus + label,
.field select:not([value=""]) + label {
    top: -8px;
    background: rgba(255,255,255,0.7);
    font-size: 0.78rem;
    color: #013c3c;
    padding-left: 4px;
    padding-right: 4px;
}

/* === ROW GRID RESPONSIVE === */
.row {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.col {
    flex: 1;
    min-width: 240px;
}

/* === BOUTON PREMIUM === */
.btn {
    margin-top: 20px;
    width: 100%;
    padding: 16px;
    background: #ffffff;
    color: #066F6F;
    border: none;
    border-radius: 14px;
    font-size: 1.2rem;
    font-weight: 700;
    cursor: pointer;

    transition: 0.3s ease;
}

.btn:hover {
    background: #e1ffff;
}

/* === MOBILE === */
@media (max-width: 780px) {
    .container {
        padding: 20px;
    }
}

</style>
</head>

<body>

<div class="container">

    <h1>Créer un compte VANTEX</h1>
    <h2>Inscription sécurisée • Version Premium</h2>

    <form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

        <div class="row">
            <div class="col field">
                <input type="text" name="civility" id="civ" placeholder=" " required>
                <label for="civ">Civilité</label>
            </div>

            <div class="col field">
                <input type="text" name="firstname" id="firstname" placeholder=" " required>
                <label for="firstname">Prénom</label>
            </div>

            <div class="col field">
                <input type="text" name="lastname" id="lastname" placeholder=" " required>
                <label for="lastname">Nom</label>
            </div>
        </div>

        <div class="row">
            <div class="col field">
                <input type="email" name="email" id="email" placeholder=" " required>
                <label for="email">Email</label>
            </div>

            <div class="col field">
                <input type="tel" name="phone" id="phone" placeholder=" " required>
                <label for="phone">Téléphone</label>
            </div>
        </div>

        <div class="field">
            <input type="text" name="profession" id="profession" placeholder=" " required>
            <label for="profession">Profession</label>
        </div>

        <div class="row">
            <div class="col field">
                <select name="country" id="country" required>
                    <option value="" selected></option>
                </select>
                <label>Pays</label>
            </div>

            <div class="col field">
                <select name="region" id="region" required disabled>
                    <option value="" selected></option>
                </select>
                <label>Région / Province</label>
            </div>
        </div>

        <div class="row">
            <div class="col field">
                <input type="text" name="street" id="street" placeholder=" " required>
                <label for="street">Rue</label>
            </div>

            <div class="col field">
                <input type="text" name="city" id="city" placeholder=" " required>
                <label for="city">Ville</label>
            </div>

            <div class="col field">
                <input type="text" name="zip" id="zip" placeholder=" " required>
                <label for="zip">Code postal</label>
            </div>
        </div>

        <div class="field" style="margin-top:15px;">
            <input type="file" name="id_front" required>
            <label style="top:-15px; font-size:.8rem;">Document d'identité (recto)</label>
        </div>

        <div class="field">
            <input type="file" name="id_back" required>
            <label style="top:-15px; font-size:.8rem;">Document d'identité (verso)</label>
        </div>

        <button class="btn" type="submit">Créer mon compte</button>

    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {

    /* === TÉLÉPHONE === */
    const phone = document.querySelector("#phone");
    if (phone) {
        window.intlTelInput(phone, {
            separateDialCode: true,
            initialCountry: "fr",
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
        });
    }

    /* === PAYS / RÉGIONS === */
    async function loadCountries() {
        const countrySelect = document.getElementById("country");
        const res = await fetch("/json/countries.json");
        const countries = await res.json();

        countries.sort((a, b) => a.name.common.localeCompare(b.name.common));

        countries.forEach(c => {
            const opt = document.createElement("option");
            opt.value = c.cca2;
            opt.textContent = c.name.common;
            countrySelect.appendChild(opt);
        });
    }

    async function loadRegions(code) {
        const regionSelect = document.getElementById("region");
        const res = await fetch("/json/regions.json");
        const all = await res.json();

        const regions = all[code] || [];

        regionSelect.innerHTML = '<option value=""></option>';
        regionSelect.disabled = regions.length === 0;

        regions.forEach(r => {
            const opt = document.createElement("option");
            opt.value = r;
            opt.textContent = r;
            regionSelect.appendChild(opt);
        });
    }

    loadCountries();

    document.getElementById("country").addEventListener("change", function() {
        loadRegions(this.value);
    });

});
</script>

</body>
</html>


