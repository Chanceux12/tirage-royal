<!DOCTYPE html> 
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ouvrir un compte VANTEX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- International Phone CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" />

    <style>
        body {
            margin: 0;
            font-family: "Inter", Arial, sans-serif;
            background: #f5f7fa;
            color: #1a1a1a;
        }

        .header {
            text-align: center;
            padding: 2rem 1rem;
        }
        .header h1 {
            font-size: 2.6rem;
            color: #0057b8;
            margin: 0;
        }
        .header p {
            font-size: 1.1rem;
            color: #555;
        }

        .container {
            max-width: 1100px;
            margin: 2rem auto;
            display: grid;
            grid-template-columns: 1fr 1.2fr;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .left-img {
            background: url('/image/bank-form.jpg') center/cover no-repeat;
            min-height: 100%;
        }

        .form {
            padding: 2.5rem;
        }
        .form h2 {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            color: #003b77;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.4rem;
            color: #003b77;
        }

        input, select {
            width: 100%;
            padding: 0.8rem;
            border-radius: 10px;
            border: 1.5px solid #d5d9de;
            font-size: 1rem;
            outline: none;
            background: #fff;
        }

        input:focus, select:focus {
            border-color: #0057b8;
            box-shadow: 0 0 5px rgba(0, 87, 184, 0.3);
        }

        .row {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }
        .col {
            flex: 1;
            min-width: 180px;
        }

        .btn {
            margin-top: 1.5rem;
            width: 100%;
            padding: 1rem;
            background: #0057b8;
            color: #fff;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: 0.3s;
        }
        .btn:hover {
            background: #003b77;
        }

        .checkbox {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            margin-top: 1rem;
        }

        @media (max-width: 900px) {
            .container {
                grid-template-columns: 1fr;
            }
            .left-img {
                height: 280px;
            }
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>Ouvrir un compte VANTEX</h1>
        <p>Rejoignez une banque moderne, rapide et sécurisée en quelques minutes.</p>
    </div>

    <div class="container">
        <div class="left-img"></div>

        <div class="form">
            <h2>Informations personnelles</h2>

            <form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

                <div class="row">
                    <div class="col">
                        <label>Civilité *</label>
                        <select name="civility" required>
                            <option value="">Sélectionnez</option>
                            <option value="M.">M.</option>
                            <option value="Mme">Mme</option>
                            <option value="Mlle">Mlle</option>
                            <option value="Dr">Dr</option>
                        </select>
                    </div>

                    <div class="col">
                        <label>Prénom *</label>
                        <input type="text" name="firstname" required>
                    </div>

                    <div class="col">
                        <label>Nom *</label>
                        <input type="text" name="lastname" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label>Email *</label>
                        <input type="email" name="email" required>
                    </div>

                    <div class="col">
                        <label>Téléphone *</label>
                        <input type="tel" name="phone" id="phone" required>
                    </div>
                </div>

                <label>Profession *</label>
                <input type="text" name="profession" required>

                <div class="row">
                    <div class="col">
                        <label>Type de pièce *</label>
                        <select name="id_type" required>
                            <option value="">Sélectionnez</option>
                            <option value="passeport">Passeport</option>
                            <option value="cni">Carte d'identité</option>
                            <option value="titre_sejour">Titre de séjour</option>
                        </select>
                    </div>

                    <div class="col">
                        <label>Numéro de pièce *</label>
                        <input type="text" name="id_number" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="country">Pays *</label>
                        <select name="country" id="country" required>
                            <option value="">Chargement...</option>
                        </select>
                    </div>

                    <div class="col">
                        <label for="region">Région / Province *</label>
                        <select id="region" name="region" required disabled>
                            <option value="">Sélectionnez un pays d'abord</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label>Rue *</label>
                        <input type="text" name="street" required>
                    </div>
                    <div class="col">
                        <label>Ville *</label>
                        <input type="text" name="city" required>
                    </div>
                    <div class="col">
                        <label>Code postal *</label>
                        <input type="text" name="zip" required>
                    </div>
                </div>

                <label>Documents d'identité *</label>
                <input type="file" name="id_front" accept=".jpg,.jpeg,.png,.pdf" required>
                <input type="file" name="id_back" accept=".jpg,.jpeg,.png,.pdf" required>

                <div class="checkbox">
                    <input type="checkbox" name="terms" required>
                    <label>J'accepte les conditions générales</label>
                </div>

                <button class="btn" type="submit">Créer mon compte</button>

            </form>
        </div>
    </div>

    <!-- International Phone JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>

    <script>

    document.addEventListener("DOMContentLoaded", () => {

        /* === INIT TÉLÉPHONE === */
        const phoneInput = document.querySelector("#phone");
        if (phoneInput) {
            window.intlTelInput(phoneInput, {
                separateDialCode: true,
                initialCountry: "fr",
                utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
            });
        }

        const countrySelect = document.getElementById("country");
        const regionSelect = document.getElementById("region");

        /* === CHARGEMENT LOCAL DES PAYS === */
        async function loadCountries() {
            try {
                countrySelect.innerHTML = "<option>Chargement...</option>";

                const res = await fetch("/json/countries.json");
                if (!res.ok) throw new Error("Fichier countries.json introuvable");

                const countries = await res.json();

                countries.sort((a, b) =>
                    a.name.common.localeCompare(b.name.common)
                );

                countrySelect.innerHTML = '<option value="">Sélectionnez un pays</option>';

                countries.forEach(c => {
                    const opt = document.createElement("option");
                    opt.value = c.cca2;
                    opt.textContent = c.name.common;
                    countrySelect.appendChild(opt);
                });

            } catch (err) {
                console.error("Erreur chargement pays:", err);
                countrySelect.innerHTML = "<option>Impossible de charger les pays</option>";
            }
        }

        /* === CHARGEMENT LOCAL DES RÉGIONS === */
        async function loadRegions(countryCode) {
            if (!countryCode) {
                regionSelect.innerHTML = "<option>Sélectionnez un pays d'abord</option>";
                regionSelect.disabled = true;
                return;
            }

            try {
                const res = await fetch("/json/regions.json");
                if (!res.ok) throw new Error("regions.json introuvable");

                const data = await res.json();
                const regions = data[countryCode] || data["DEFAULT"];

                // Aucun résultat → passer à un champ texte libre
                if (!regions.length) {
                    const input = document.createElement("input");
                    input.type = "text";
                    input.name = "region";
                    input.id = "region";
                    input.placeholder = "Entrez votre région / province";
                    input.required = true;

                    regionSelect.parentNode.replaceChild(input, regionSelect);
                    return;
                }

                // Sinon → liste déroulante
                regionSelect.innerHTML = "<option value=''>Sélectionnez une région</option>";
                regions.forEach(r => {
                    const opt = document.createElement("option");
                    opt.value = r;
                    opt.textContent = r;
                    regionSelect.appendChild(opt);
                });

                regionSelect.disabled = false;

            } catch (err) {
                console.error("Erreur regions:", err);
                regionSelect.innerHTML = "<option>Erreur chargement régions</option>";
            }
        }

        /* === INIT === */
        loadCountries();

        /* === CHANGEMENT PAYS === */
        countrySelect.addEventListener("change", () => {

            let current = document.getElementById("region");

            // Si la région est devenue input, on recrée un select
            if (current && current.tagName === "INPUT") {
                const newSelect = document.createElement("select");
                newSelect.id = "region";
                newSelect.name = "region";
                newSelect.required = true;
                newSelect.disabled = true;
                newSelect.innerHTML = "<option>Sélectionnez un pays d'abord</option>";
                current.parentNode.replaceChild(newSelect, current);
                current = newSelect;
            }

            loadRegions(countrySelect.value);
        });

    });
    </script>
</body>
</html>
