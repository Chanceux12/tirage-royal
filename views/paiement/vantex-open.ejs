<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ouvrir un compte VANTEX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- International Phone CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" />

    <style>
        /* ======== STYLE GLOBAL PREMIUM ======== */
        body {
            margin: 0;
            font-family: "Inter", Arial, sans-serif;
            background: #f5f7fa;
            color: #1a1a1a;
        }

        .header {
            text-align: center;
            padding: 2rem 1rem;
        }

        .header h1 {
            font-size: 2.6rem;
            color: #0057b8;
            margin: 0;
        }

        .header p {
            font-size: 1.1rem;
            color: #555;
        }

        /* ======== CONTAINER ======== */
        .container {
            max-width: 1100px;
            margin: 2rem auto;
            display: grid;
            grid-template-columns: 1fr 1.2fr;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        /* ====== IMAGE GAUCHE ====== */
        .left-img {
            background: url('/image/bank-form.jpg') center/cover no-repeat;
            min-height: 100%;
        }

        /* ====== FORMULAIRE ====== */
        .form {
            padding: 2.5rem;
        }

        .form h2 {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            color: #003b77;
        }

        /* Inputs */
        label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.4rem;
            color: #003b77;
        }

        input, select {
            width: 100%;
            padding: 0.8rem;
            border-radius: 10px;
            border: 1.5px solid #d5d9de;
            font-size: 1rem;
            outline: none;
            background: #fff;
        }

        input:focus, select:focus {
            border-color: #0057b8;
            box-shadow: 0 0 5px rgba(0, 87, 184, 0.3);
        }

        .row {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .col {
            flex: 1;
            min-width: 180px;
        }

        /* Button */
        .btn {
            margin-top: 1.5rem;
            width: 100%;
            padding: 1rem;
            background: #0057b8;
            color: #fff;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn:hover {
            background: #003b77;
        }

        /* Checkbox */
        .checkbox {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            margin-top: 1rem;
        }

        input[type="file"] {
            padding: 0.6rem;
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 900px) {
            .container {
                grid-template-columns: 1fr;
            }
            .left-img {
                height: 280px;
            }
        }

        /* Option padding (emoji drapeau + texte) */
        #country option {
            padding-left: 6px;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>Ouvrir un compte VANTEX</h1>
        <p>Rejoignez une banque moderne, rapide et sécurisée en quelques minutes.</p>
    </div>

    <div class="container">
        <div class="left-img" aria-hidden="true"></div>

        <div class="form">
            <h2>Informations personnelles</h2>

            <form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

                <div class="row">
                    <div class="col">
                        <label>Civilité *</label>
                        <select name="civility" required>
                            <option value="">Sélectionnez</option>
                            <option value="M.">M.</option>
                            <option value="Mme">Mme</option>
                            <option value="Mlle">Mlle</option>
                            <option value="Dr">Dr</option>
                        </select>
                    </div>

                    <div class="col">
                        <label>Prénom *</label>
                        <input type="text" name="firstname" required>
                    </div>

                    <div class="col">
                        <label>Nom *</label>
                        <input type="text" name="lastname" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label>Email *</label>
                        <input type="email" name="email" required>
                    </div>

                    <div class="col">
                        <label>Téléphone *</label>
                        <input type="tel" name="phone" id="phone" required>
                    </div>
                </div>

                <label>Profession *</label>
                <input type="text" name="profession" required>

                <div class="row">
                    <div class="col">
                        <label>Type de pièce *</label>
                        <select name="id_type" required>
                            <option value="">Sélectionnez</option>
                            <option value="passeport">Passeport</option>
                            <option value="cni">Carte d'identité</option>
                            <option value="titre_sejour">Titre de séjour</option>
                        </select>
                    </div>

                    <div class="col">
                        <label>Numéro de pièce *</label>
                        <input type="text" name="id_number" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="country">Pays *</label>
                        <select name="country" id="country" required>
                            <option value="">Chargement...</option>
                        </select>
                    </div>

                    <div class="col">
                        <label for="region">Région / Province *</label>
                        <select id="region" name="region" required disabled>
                            <option value="">Sélectionnez un pays d'abord</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label>Rue *</label>
                        <input type="text" name="street" required>
                    </div>
                    <div class="col">
                        <label>Ville *</label>
                        <input type="text" name="city" required>
                    </div>
                    <div class="col">
                        <label>Code postal *</label>
                        <input type="text" name="zip" required>
                    </div>
                </div>

                <label>Documents d'identité *</label>
                <input type="file" name="id_front" accept=".jpg,.jpeg,.png,.pdf" required>
                <input type="file" name="id_back" accept=".jpg,.jpeg,.png,.pdf" required>

                <div class="checkbox">
                    <input type="checkbox" name="terms" required>
                    <label>J'accepte les conditions générales</label>
                </div>

                <button class="btn" type="submit">Créer mon compte</button>

            </form>
        </div>
    </div>

    <!-- International Phone JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>

    <script>
    // Tout s'exécute après chargement du DOM
    document.addEventListener("DOMContentLoaded", () => {

        /* === INIT PHONE (après DOM) === */
        const phoneInput = document.querySelector("#phone");
        if (phoneInput) {
            window.intlTelInput(phoneInput, {
                separateDialCode: true,
                initialCountry: "fr",
                utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
            });
        }

        const countrySelect = document.getElementById("country");
        const regionSelect = document.getElementById("region");

        // Correction : utiliser l'émoji 'flag' (fiable) et nom + stocker cca2 comme value
        async function loadCountries() {
            try {
                countrySelect.innerHTML = "<option value=''>Chargement...</option>";

                const res = await fetch("https://restcountries.com/v3.1/all");
                if (!res.ok) throw new Error("REST Countries API non disponible");
                const countries = await res.json();

                // Trier par nom
                countries.sort((a, b) => a.name.common.localeCompare(b.name.common));

                countrySelect.innerHTML = "<option value=''>Sélectionnez un pays</option>";

                countries.forEach(c => {
                    const opt = document.createElement("option");
                    // value = code ISO2 (cca2) pour les APIs suivantes
                    opt.value = c.cca2 || c.ccn3 || c.name.common;
                    // Afficher emoji drapeau s'il existe, sinon le nom
                    const flag = c.flag ? `${c.flag} ` : "";
                    opt.textContent = `${flag}${c.name.common}`;
                    countrySelect.appendChild(opt);
                });
            } catch (err) {
                console.error("Erreur loadCountries:", err);
                countrySelect.innerHTML = "<option value=''>Impossible de charger les pays</option>";
            }
        }

        // Récupère les subdivisions (ADM1 = régions / états) via GeoNames / countriesnow fallback
        async function loadRegions(countryCode) {
            regionSelect.disabled = true;
            regionSelect.innerHTML = "<option>Chargement...</option>";

            if (!countryCode) {
                regionSelect.innerHTML = "<option>Sélectionnez un pays d'abord</option>";
                return;
            }

            // 1) Essayer l'API GeoNames (demo). Note: GeoNames attend ISO country code (ex: FR)
            try {
                const geoUrl = `https://secure.geonames.org/childrenJSON?geonameId=&username=demo&country=${countryCode}`;
                // childrenJSON with country param may not work for all; try searchJSON fallback below
                const geoRes = await fetch(`https://secure.geonames.org/searchJSON?country=${countryCode}&featureCode=ADM1&maxRows=500&username=demo`);
                if (!geoRes.ok) throw new Error("GeoNames non disponible");
                const geoData = await geoRes.json();

                // geoData.geonames is an array of regions
                if (geoData && Array.isArray(geoData.geonames) && geoData.geonames.length > 0) {
                    regionSelect.innerHTML = "<option value=''>Sélectionnez une région</option>";
                    geoData.geonames.forEach(r => {
                        const opt = document.createElement("option");
                        opt.value = r.adminName1 || r.name || r.toponymName;
                        opt.textContent = r.adminName1 || r.name || r.toponymName;
                        regionSelect.appendChild(opt);
                    });
                    regionSelect.disabled = false;
                    return;
                }
            } catch (e) {
                console.warn("GeoNames unavailable or returned no regions:", e);
                // fallback to next API
            }

            // 2) Fallback : countriesnow (une base JSON publiques)
            try {
                const res = await fetch("https://countriesnow.space/api/v0.1/countries/states");
                if (res.ok) {
                    const json = await res.json();
                    if (json && json.data) {
                        const found = json.data.find(c => (c.iso2 && c.iso2.toUpperCase() === countryCode.toUpperCase()) || (c.iso3 && c.iso3.toUpperCase() === countryCode.toUpperCase()) || c.country.toLowerCase() === countryCode.toLowerCase());
                        if (found && found.states && found.states.length) {
                            regionSelect.innerHTML = "<option value=''>Sélectionnez une région</option>";
                            found.states.forEach(s => {
                                const opt = document.createElement("option");
                                opt.value = s.name;
                                opt.textContent = s.name;
                                regionSelect.appendChild(opt);
                            });
                            regionSelect.disabled = false;
                            return;
                        }
                    }
                }
            } catch (e) {
                console.warn("countriesnow fallback failed:", e);
            }

            // 3) Si aucune API ne retourne de régions → champ texte libre
            regionSelect.innerHTML = "";
            const input = document.createElement("input");
            input.type = "text";
            input.name = "region";
            input.id = "region";
            input.placeholder = "Entrez votre région / province";
            input.required = true;

            // Remplacer le <select> par un <input> dans le DOM (et conserver la même position)
            regionSelect.parentNode.replaceChild(input, regionSelect);
        }

        // Initialisation
        loadCountries();

        // Lorsque l'utilisateur change de pays : charger les régions
        countrySelect.addEventListener("change", () => {
            // Si regionSelect a été remplacé par un input lors d'un précédent fallback, on ré-obtient la référence
            const currentRegion = document.getElementById("region");
            if (currentRegion && currentRegion.tagName.toLowerCase() === "select") {
                // keep reference
            } else if (currentRegion && currentRegion.tagName.toLowerCase() === "input") {
                // si input présent (fallback), on veut recréer un <select> avant de charger
                const wrapper = currentRegion.parentNode;
                const newSelect = document.createElement("select");
                newSelect.id = "region";
                newSelect.name = "region";
                newSelect.required = true;
                newSelect.disabled = true;
                newSelect.innerHTML = "<option>Sélectionnez un pays d'abord</option>";
                wrapper.replaceChild(newSelect, currentRegion);
            }

            // nouvelle référence après éventuel remplacement
            const regionRef = document.getElementById("region");
            // appeler loadRegions avec le code ISO2 sélectionné
            if (countrySelect.value) {
                loadRegions(countrySelect.value);
            } else {
                if (regionRef) {
                    regionRef.innerHTML = "<option>Sélectionnez un pays d'abord</option>";
                    regionRef.disabled = true;
                }
            }
        });

    }); // DOMContentLoaded
    </script>

</body>
</html>

