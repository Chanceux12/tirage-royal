<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Ouvrir un compte VANTEX</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" />

<style>

/* === FOND === */
body {
    margin: 0;
    font-family: "Inter", sans-serif;
    background: linear-gradient(135deg, #0A9999, #066F6F);
    min-height: 100vh;
    padding: 18px;
}

/* === CARD VERRE DEPOLI MAIS PLUS SOBRE === */
.container {
    max-width: 500px;
    margin: auto;
    padding: 28px 24px;
    border-radius: 20px;

    background: rgba(255,255,255,0.16);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.20);

    box-shadow: 0 12px 40px rgba(0,0,0,0.25);
}

/* === TITRE === */
h1 {
    text-align: center;
    color: #fff;
    margin-bottom: 6px;
    font-size: 1.9rem;
}
h2 {
    text-align: center;
    color: #e9ffff;
    font-size: 1rem;
    margin-bottom: 25px;
}

/* === CHAMPS PREMIUM — PLUS MINCES === */
.field {
    position: relative;
    margin-bottom: 22px;
}

.field input,
.field select {
    width: 100%;
    padding: 12px 12px 12px 12px;
    font-size: 0.98rem;

    background: rgba(255,255,255,0.92);
    border: 1.4px solid rgba(8,120,120,0.6);
    border-radius: 10px;
    color: #1a1a1a;

    transition: 0.25s ease;
}

/* Focus */
.field input:focus,
.field select:focus {
    border-color: #fff;
    box-shadow: 0 0 6px rgba(255,255,255,0.5);
    outline: none;
}

/* Labels flottants — version soft */
.field label {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    padding: 0 4px;
    color: #034646;
    font-size: 0.88rem;
    pointer-events: none;
    transition: 0.25s;
}

/* Animation */
.field input:focus + label,
.field input:not(:placeholder-shown) + label,
.field select:focus + label,
.field select:not([value=""]) + label {
    top: -9px;
    font-size: 0.72rem;
    background: rgba(255,255,255,0.75);
}

/* === ROW COMPACT === */
.row {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
}
.col {
    flex: 1;
    min-width: 100%;
}

/* Desktop uniquement : 2 par ligne */
@media (min-width: 670px) {
    .col-half {
        min-width: calc(50% - 10px);
    }
}

/* === BOUTON === */
.btn {
    width: 100%;
    margin-top: 10px;
    padding: 14px;
    background: #ffffff;
    color: #066F6F;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
}

.btn:hover {
    background: #d9ffff;
}

</style>
</head>

<body>

<div class="container">
    <h1>Créer un compte</h1>
    <h2>Ouverture rapide & sécurisée</h2>

<form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

    <div class="row">
        <div class="col col-half field">
            <input type="text" name="civility" placeholder=" " required>
            <label>Civilité</label>
        </div>

        <div class="col col-half field">
            <input type="text" name="firstname" placeholder=" " required>
            <label>Prénom</label>
        </div>
    </div>

    <div class="field">
        <input type="text" name="lastname" placeholder=" " required>
        <label>Nom</label>
    </div>

    <div class="field">
        <input type="email" name="email" placeholder=" " required>
        <label>Email</label>
    </div>

    <!-- CHAMP TELEPHONE PREMIUM -->
    <div class="field">
        <input type="tel" id="phone" name="phone" placeholder=" " required>
        <label>Téléphone</label>
    </div>

    <div class="field">
        <input type="text" name="profession" placeholder=" " required>
        <label>Profession</label>
    </div>

    <div class="field">
        <select id="country" name="country" required>
            <option value=""></option>
        </select>
        <label>Pays</label>
    </div>

    <div class="field">
        <select id="region" name="region" required disabled>
            <option value=""></option>
        </select>
        <label>Région / Province</label>
    </div>

    <div class="field">
        <input type="text" name="street" placeholder=" " required>
        <label>Rue</label>
    </div>

    <div class="row">
        <div class="col col-half field">
            <input type="text" name="city" placeholder=" " required>
            <label>Ville</label>
        </div>

        <div class="col col-half field">
            <input type="text" name="zip" placeholder=" " required>
            <label>Code postal</label>
        </div>
    </div>

    <div class="field">
        <input type="file" name="id_front" required>
        <label style="top:-14px;">Identité (recto)</label>
    </div>

    <div class="field">
        <input type="file" name="id_back" required>
        <label style="top:-14px;">Identité (verso)</label>
    </div>

    <button class="btn">Créer mon compte</button>

</form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {

    /* === TELEPHONE PRO === */
    const phone = document.querySelector("#phone");
    window.intlTelInput(phone, {
        separateDialCode: true,
        preferredCountries: ["fr", "be", "ca"],
        initialCountry: "fr",
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
    });

    /* === PAYS / REGIONS === */
    async function loadCountries() {
        const res = await fetch("/json/countries.json");
        const countries = await res.json();
        const select = document.getElementById("country");

        countries.sort((a,b) => a.name.common.localeCompare(b.name.common));

        countries.forEach(c => {
            const opt = document.createElement("option");
            opt.value = c.cca2;
            opt.textContent = c.name.common;
            select.appendChild(opt);
        });
    }

    async function loadRegions(code) {
        const regionSelect = document.getElementById("region");
        const res = await fetch("/json/regions.json");
        const all = await res.json();

        const regions = all[code] || [];
        regionSelect.innerHTML = '<option value=""></option>';

        regionSelect.disabled = regions.length === 0;

        regions.forEach(r => {
            const opt = document.createElement("option");
            opt.textContent = r;
            opt.value = r;
            regionSelect.appendChild(opt);
        });
    }

    loadCountries();

    document.getElementById("country").addEventListener("change", function() {
        loadRegions(this.value);
    });

});
</script>

</body>
</html>




