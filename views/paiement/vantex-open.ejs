<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Ouvrir un compte VANTEX</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.min.css" />

<style>

/* ====== CORE STYLE ====== */
body {
    margin: 0;
    font-family: "Inter", sans-serif;
    background: #f5f7fa;
    padding: 30px;
}

/* ====== CENTERED CARD ====== */
.card {
    max-width: 900px;
    margin: auto;
    background: #ffffff;
    padding: 40px;
    border-radius: 18px;
    box-shadow: 0 6px 24px rgba(0,0,0,0.07);
}

/* TITLE */
h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 5px;
    color: #0A9999;
    text-align: center;
}
p.subtitle {
    text-align: center;
    color: #5d676f;
    margin-bottom: 32px;
}

/* ===== FLOATING INPUT PROFESSIONAL ===== */
.field {
    position: relative;
    margin-bottom: 22px;
}

.field input,
.field select {
    width: 100%;
    padding: 14px 12px 14px 12px;
    border: 1.5px solid #cfd9e2;
    background: #fff;
    border-radius: 10px;
    font-size: 1rem;
    color: #1a1a1a;
    transition: .2s;
}

.field input:focus,
.field select:focus {
    border-color: #0A9999;
    box-shadow: 0 0 0 3px rgba(10, 153, 153, 0.20);
    outline: none;
}

/* LABEL FLOAT */
.field label {
    position: absolute;
    top: 14px;
    left: 14px;
    font-size: 0.92rem;
    color: #6c7a86;
    background: white;
    padding: 0 4px;
    pointer-events: none;
    transition: 0.25s ease;
}

.field input:not(:placeholder-shown) + label,
.field select:valid + label,
.field input:focus + label {
    top: -9px;
    font-size: 0.72rem;
    color: #0A9999;
}

/* ===== GRID ===== */
.grid {
    display: grid;
    gap: 18px;
}

@media (min-width: 830px) {
    .grid-2 {
        grid-template-columns: 1fr 1fr;
    }
}

/* ===== BUTTON ===== */
.btn {
    width: 100%;
    padding: 15px;
    background: #0A9999;
    color: white;
    font-size: 1.1rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    margin-top: 4px;
    font-weight: 600;
}
.btn:hover {
    background: #087a7a;
}

/* ===== MOBILE IMPROVEMENT ===== */
@media (max-width: 600px) {
    .card {
        padding: 26px;
    }
}

</style>
</head>

<body>

<div class="card">
    <h1>Créer un compte VANTEX</h1>
    <p class="subtitle">Formulaire sécurisé • Haute qualité bancaire</p>

<form action="/paiement/vantex/submit" method="POST" enctype="multipart/form-data">

    <div class="grid grid-2">
        <div class="field">
            <input type="text" name="civility" placeholder=" " required>
            <label>Civilité</label>
        </div>

        <div class="field">
            <input type="text" name="firstname" placeholder=" " required>
            <label>Prénom</label>
        </div>
    </div>

    <div class="field">
        <input type="text" name="lastname" placeholder=" " required>
        <label>Nom</label>
    </div>

    <div class="field">
        <input type="email" name="email" placeholder=" " required>
        <label>Email</label>
    </div>

    <!-- PHONE PRO -->
    <div class="field">
        <input type="tel" id="phone" name="phone" placeholder=" " required>
        <label>Téléphone</label>
    </div>

    <div class="field">
        <input type="text" name="profession" placeholder=" " required>
        <label>Profession</label>
    </div>

    <div class="grid grid-2">
        <div class="field">
            <select id="country" name="country" required>
                <option value="" selected></option>
            </select>
            <label>Pays</label>
        </div>

        <div class="field">
            <select id="region" name="region" required disabled>
                <option value="" selected></option>
            </select>
            <label>Région / Province</label>
        </div>
    </div>

    <div class="field">
        <input type="text" name="street" placeholder=" " required>
        <label>Rue</label>
    </div>

    <div class="grid grid-2">
        <div class="field">
            <input type="text" name="city" placeholder=" " required>
            <label>Ville</label>
        </div>

        <div class="field">
            <input type="text" name="zip" placeholder=" " required>
            <label>Code postal</label>
        </div>
    </div>

    <div class="field">
        <input type="file" name="id_front" required>
        <label style="top:-10px;background:white;">Identité (recto)</label>
    </div>

    <div class="field">
        <input type="file" name="id_back" required>
        <label style="top:-10px;background:white;">Identité (verso)</label>
    </div>

    <button class="btn">Créer mon compte</button>
</form>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>
<script>
/* PHONE */
const phoneInput = document.querySelector("#phone");
window.intlTelInput(phoneInput, {
    separateDialCode: true,
    initialCountry: "fr",
});

/* PAYS/REGIONS */
async function loadCountries(){
    const res = await fetch("/json/countries.json");
    const countries = await res.json();
    const el = document.getElementById("country");

    countries.sort((a,b)=> a.name.common.localeCompare(b.name.common));

    countries.forEach(c=>{
        const opt = document.createElement("option");
        opt.value = c.cca2;
        opt.textContent = c.name.common;
        el.appendChild(opt);
    });
}
loadCountries();
</script>

</body>
</html>






