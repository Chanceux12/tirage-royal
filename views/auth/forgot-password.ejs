<%- include('../partials/header') %>

<div class="auth-container">
  <div class="auth-box">
    <h2 class="auth-title">Mot de passe oublié</h2>

    <% if (message) { %>
      <div class="alert <%= messageType === 'success' ? 'success' : 'error' %>">
        <%= message %>
      </div>
    <% } %>

    <form action="/auth/forgot-password" method="POST" class="auth-form">
      <div class="form-group">
        <label for="email">Adresse e-mail</label>
        <input 
          type="email"
          id="email"
          name="email"
          required
          placeholder="exemple@email.com"
        >
      </div>

      <button type="submit" class="btn-primary">Envoyer le code</button>
    </form>

    <div class="auth-links">
      <a href="/auth/login">← Retour à la connexion</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
