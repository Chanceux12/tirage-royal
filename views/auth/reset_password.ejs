

<div class="auth-container">
  <div class="auth-box">
    <h2 class="auth-title">Nouveau mot de passe</h2>

    <% if (message) { %>
      <div class="alert <%= messageType === 'success' ? 'success' : 'error' %>">
        <%= message %>
      </div>
    <% } %>

    <% if (showForm) { %>
      <form action="/auth/reset-password" method="POST" class="auth-form">
        <input type="hidden" name="email" value="<%= email %>">
        <input type="hidden" name="code" value="<%= code %>">

        <div class="form-group">
          <label for="password">Nouveau mot de passe</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="Entrez un nouveau mot de passe"
          >
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirmer le mot de passe</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            required
            placeholder="Confirmez le mot de passe"
          >
        </div>

        <button type="submit" class="btn-primary">Réinitialiser</button>
      </form>
    <% } %>

    <div class="auth-links">
      <a href="/auth/login">← Retour à la connexion</a>
    </div>
  </div>
</div>


