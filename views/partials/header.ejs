      </div>
    <% } %>

    <% if (user) { %>
      <a href="/user/dashboard">ðŸŽ« Mon compte</a>
    <% } %>

    <nav id="navbar">
      <a href="/">Accueil</a>
      <a href="/login">Connexion</a>
      <a href="/register">Inscription</a>
    </nav>
  </header>

  <script>
    function toggleMenu() {
      const navbar = document.getElementById("navbar");
      navbar.classList.toggle("active");
    }
  </script>
</body>
</html>
