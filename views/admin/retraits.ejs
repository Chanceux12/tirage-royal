<!DOCTYPE html> 
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin - Gestion des retraits</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #080032;
      color: #fff;
      margin: 0;
      padding: 2rem;
    }

    h1 {
      margin-bottom: 1rem;
    }

    .flash-success, .flash-error {
      padding: 0.8rem 1rem;
      border-radius: 5px;
      margin-bottom: 1rem;
      font-weight: bold;
    }
    .flash-success { background-color: #28a745; }
    .flash-error { background-color: #dc3545; }

    .filter {
      margin-bottom: 1rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: rgba(255,255,255,0.05);
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      padding: 0.8rem 1rem;
      text-align: left;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    th {
      background: rgba(255,255,255,0.1);
    }

    tr:hover {
      background: rgba(255,255,255,0.1);
    }

    .btn {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      margin-right: 0.3rem;
      transition: all 0.3s ease;
    }

    .btn-valider { background-color: #28a745; color: #fff; }
    .btn-valider:hover { background-color: #218838; }

    .btn-refuser { background-color: #dc3545; color: #fff; }
    .btn-refuser:hover { background-color: #c82333; }

    @media(max-width: 900px) {
      table, th, td { font-size: 0.85rem; }
    }
  </style>
</head>
<body>
  <h1>Gestion des retraits</h1>

  <% if (success && success.length) { %>
    <div class="flash-success"><%= success %></div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="flash-error"><%= error %></div>
  <% } %>

  <div class="filter">
    <form method="GET" action="/admin/retraits">
      <label for="statut">Filtrer par statut :</label>
      <select name="statut" id="statut" onchange="this.form.submit()">
        <option value="">Tous</option>
        <option value="en_attente" <%= statut === 'en_attente' ? 'selected' : '' %>>En attente</option>
        <option value="réussi" <%= statut === 'réussi' ? 'selected' : '' %>>Réussi</option>
        <option value="échoué" <%= statut === 'échoué' ? 'selected' : '' %>>Échoué</option>
      </select>
    </form>
  </div>

  <% if (!retraits || retraits.length === 0) { %>
    <p>Aucun retrait correspondant.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Utilisateur</th>
          <th>Montant (€)</th>
          <th>Date</th>
          <th>IBAN</th>
          <th>BIC</th>
          <th>Bénéficiaire</th>
          <th>Banque</th>
          <th>Motif</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% retraits.forEach(r => { %>
          <tr>
            <td><%= r.user.username %></td>
            <td><%= r.amount.toFixed(2) %></td>
            <td><%= r.date %></td>
            <td><%= r.iban %></td>
            <td><%= r.bic %></td>
            <td><%= r.benef_name %></td>
            <td><%= r.bank_name %></td>
            <td><%= r.motif %></td>
            <td><%= r.statut %></td>
            <td>
              <% if (r.statut === 'en_attente') { %>
                <form action="/admin/retraits/valider/<%= r._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-valider">Valider</button>
                </form>
                <form action="/admin/retraits/refuser/<%= r._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-refuser">Refuser</button>
                </form>
              <% } else { %>
                <span>—</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
