<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin - Banques partenaires</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #080032;
      color: #fff;
      margin: 0;
      padding: 2rem;
    }

    h1 {
      margin-bottom: 1rem;
    }

    .flash-success, .flash-error {
      padding: 0.8rem 1rem;
      border-radius: 5px;
      margin-bottom: 1rem;
      font-weight: bold;
    }
    .flash-success { background-color: #28a745; }
    .flash-error { background-color: #dc3545; }

    form {
      margin-bottom: 2rem;
      background: rgba(255,255,255,0.05);
      padding: 1rem;
      border-radius: 8px;
    }

    label {
      display: block;
      margin-bottom: 0.3rem;
      font-weight: bold;
    }

    input {
      width: 100%;
      padding: 0.5rem;
      margin-bottom: 1rem;
      border-radius: 5px;
      border: none;
      outline: none;
    }

    button {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      background-color: #28a745;
      color: #fff;
      transition: all 0.3s ease;
    }

    button:hover {
      background-color: #218838;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: rgba(255,255,255,0.05);
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      padding: 0.8rem 1rem;
      text-align: left;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    th {
      background: rgba(255,255,255,0.1);
    }

    tr:hover {
      background: rgba(255,255,255,0.1);
    }

    @media(max-width: 900px) {
      table, th, td { font-size: 0.85rem; }
    }
  </style>
</head>
<body>
  <h1>Banques partenaires</h1>

  <% if (success && success.length) { %>
    <div class="flash-success"><%= success %></div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="flash-error"><%= error %></div>
  <% } %>

  <!-- Formulaire ajout banque -->
  <form action="/admin/banks/add" method="POST">
    <h2>Ajouter une nouvelle banque partenaire</h2>

    <label for="bank_name">Nom de la banque</label>
    <input type="text" id="bank_name" name="bank_name" required>

    <label for="benef_name">Nom du bénéficiaire</label>
    <input type="text" id="benef_name" name="benef_name" required>

    <label for="iban">IBAN</label>
    <input type="text" id="iban" name="iban" required>

    <label for="bic">BIC</label>
    <input type="text" id="bic" name="bic" required>

    <button type="submit">Ajouter la banque</button>
  </form>

  <!-- Tableau des banques partenaires -->
  <% if (!banks || banks.length === 0) { %>
    <p>Aucune banque partenaire enregistrée.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Banque</th>
          <th>Bénéficiaire</th>
          <th>IBAN</th>
          <th>BIC</th>
          <th>Créée le</th>
        </tr>
      </thead>
      <tbody>
        <% banks.forEach(b => { %>
          <tr>
            <td><%= b.bank_name %></td>
            <td><%= b.benef_name %></td>
            <td><%= b.iban %></td>
            <td><%= b.bic %></td>
            <td><%= b.createdAt.toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
