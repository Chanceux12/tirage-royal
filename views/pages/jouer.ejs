<!-- SCRIPT D'ANIMATION POUR COMPTEUR -->
<script>
  function formatNombre(n) {
    if (n >= 1_000_000) return (n / 1_000_000).toFixed(1) + 'M';
    if (n >= 1_000) return (n / 1_000).toFixed(1) + 'K';
    return n.toString();
  }

  function animerCompteurAvecCercle(id, cible, duration, cercleSvg) {
    const el = document.getElementById(id);
    let valeur = 0;
    const increment = cible / (duration / 10);
    const cercle = cercleSvg.querySelector('circle:nth-child(2)');
    const longueur = 2 * Math.PI * 54;

    cercle.classList.remove('pulse');

    const interval = setInterval(() => {
      valeur += increment;
      if (valeur >= cible) {
        valeur = cible;
        clearInterval(interval);
        cercle.classList.add('pulse');
      }
      el.textContent = formatNombre(Math.floor(valeur));

      const progress = valeur / cible;
      cercle.setAttribute('stroke-dashoffset', longueur * (1 - progress));
    }, 10);
  }

  document.addEventListener("DOMContentLoaded", () => {
    const cercle1 = document.querySelectorAll('.circle')[0];
    const cercle2 = document.querySelectorAll('.circle')[1];
    animerCompteurAvecCercle("joueurs-en-ligne", 20654755454, 1500, cercle1);
    animerCompteurAvecCercle("billets-restants", 523545464, 1000, cercle2);
  });
</script>


