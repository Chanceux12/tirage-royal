  <style>
    /* === STYLE GLOBAL === */
    body {
      margin: 0;
      font-family: "Segoe UI", Arial, sans-serif;
      background-color: #080032;
      color: #fff;
      opacity: 0;
      transition: opacity 1.2s ease-in-out;
    }
    body.loaded {
      opacity: 1;
    }

    /* === LOADER LUXUEUX ANIM√â === */
    #loader {
      position: fixed;
      inset: 0;
      background: radial-gradient(circle at center, #06002e, #010010);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      overflow: hidden;
      transition: opacity 1s ease, visibility 1s ease;
    }
    .gold-ring {
      width: 120px;
      height: 120px;
      border: 3px solid rgba(255, 215, 0, 0.5);
      border-top-color: gold;
      border-radius: 50%;
      animation: rotateRing 1.8s linear infinite;
      box-shadow: 0 0 25px rgba(255, 215, 0, 0.6),
                  inset 0 0 20px rgba(255, 215, 0, 0.4);
    }
    .glow {
      position: absolute;
      width: 150px;
      height: 150px;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(255, 215, 0, 0.3), transparent 70%);
      animation: rotateGlow 3s linear infinite;
      filter: blur(8px);
    }
    .loader-text {
      margin-top: 30px;
      font-size: 1.6em;
      color: gold;
      font-family: 'Cinzel', serif;
      letter-spacing: 3px;
      text-shadow: 0 0 15px gold;
      animation: fadePulse 1.8s ease-in-out infinite;
    }
    @keyframes rotateRing { from {transform: rotate(0);} to {transform: rotate(360deg);} }
    @keyframes rotateGlow { from {transform: rotate(0);} to {transform: rotate(360deg);} }
    @keyframes fadePulse {
      0%,100% { opacity: 1; transform: scale(1);}
      50% { opacity: 0.6; transform: scale(1.05);}
    }
    body.loaded #loader { opacity: 0; visibility: hidden; }

    /* === NAVBAR === */
    header.navbar {
      background: linear-gradient(90deg, #0e0038, #20006a);
      padding: 12px 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.4);
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .navbar-container {
      max-width: 1300px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    .navbar-left .logo {
