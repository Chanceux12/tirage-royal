    body {
      margin: 0;
      font-family: "Segoe UI", Arial, sans-serif; /* ton font existant */
      background-color: #080032;
      color: #fff;
    }

    header.navbar {
      background: linear-gradient(90deg, #0e0038, #20006a);
      padding: 12px 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.4);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .navbar-container {
      max-width: 1300px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    /* Logo */
    .navbar-left .logo {
      font-size: 1.7em;
      font-weight: 700;
      color: #fecd1a;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .navbar-left .logo:hover { color: #ffdd4a; }

    /* Menu desktop */
    nav.navbar-menu {
      display: flex;
      gap: 20px;
      align-items: center;
      flex-wrap: wrap;
    }
    nav.navbar-menu a {
      font-weight: 500;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background-color 0.3s;
    }
    nav.navbar-menu a:hover { background: rgba(255,255,255,0.15); }

    /* Dropdown Paiements et Jeux */
    .dropdown-container { position: relative; display: inline-block; }
    .dropdown-btn {
      background: none;
      border: none;
      color: #fff;
      font-weight: 500;
      cursor: pointer;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background 0.3s;
    }
    .dropdown-btn:hover { background: rgba(255,255,255,0.15); }

    .dropdown-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background: #0e0038;
      min-width: 180px;
      border-radius: 6px;
      overflow: hidden;
      z-index: 1000;
    }
    .dropdown-menu a {
      display: block;
      padding: 10px 14px;
      color: #fff;
      text-decoration: none;
      transition: background 0.3s;
    }
    .dropdown-menu a:hover { background: rgba(255,255,255,0.15); }

    .dropdown-container:hover .dropdown-menu { display: block; }

    /* Zone droite */
    .navbar-right {
      display: flex;
      align-items: center;
      gap: 16px;
      flex-wrap: wrap;
      min-width: 220px;
      justify-content: flex-end;
    }
    .navbar-right a {
      font-weight: 500;
      padding: 6px 14px;
      border-radius: 6px;
      transition: background-color 0.3s;
      white-space: nowrap;
      text-decoration: none;
    }
    .navbar-right a:hover { background: rgba(255,255,255,0.15); }

    .btn-orange {
      background-color: #f97316;
      padding: 8px 16px;
      border-radius: 8px;
      font-weight: 700;
      text-decoration: none;
      transition: background-color 0.3s;
    }
