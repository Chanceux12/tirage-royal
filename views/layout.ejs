  <style>

    body {
      margin: 0;
      font-family: "Segoe UI", Arial, sans-serif; /* ton font existant */
      background-color: #080032;
      color: #fff;
    }

    header.navbar {
      background: linear-gradient(90deg, #0e0038, #20006a);
      padding: 12px 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.4);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .navbar-container {
      max-width: 1300px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    /* Logo */
    .navbar-left .logo {
      font-size: 1.7em;
      font-weight: 700;
      color: #fecd1a;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .navbar-left .logo:hover { color: #ffdd4a; }

    /* Menu desktop */
    nav.navbar-menu {
      display: flex;
      gap: 20px;
      align-items: center;
      flex-wrap: wrap;
    }
    nav.navbar-menu a {
      font-weight: 500;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background-color 0.3s;
    }
    nav.navbar-menu a:hover { background: rgba(255,255,255,0.15); }

    /* Dropdown Paiements et Jeux */
    .dropdown-container { position: relative; display: inline-block; }
    .dropdown-btn {
      background: none;
      border: none;
      color: #fff;
      font-weight: 500;
      cursor: pointer;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background 0.3s;
    }
    .dropdown-btn:hover { background: rgba(255,255,255,0.15); }

    .dropdown-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background: #0e0038;
      min-width: 180px;
      border-radius: 6px;
      overflow: hidden;
      z-index: 1000;
    }
    .dropdown-menu a {
      display: block;
      padding: 10px 14px;
      color: #fff;
      text-decoration: none;
      transition: background 0.3s;
    }
    .dropdown-menu a:hover { background: rgba(255,255,255,0.15); }

    .dropdown-container:hover .dropdown-menu { display: block; }

    /* Zone droite */
    .navbar-right {
      display: flex;
      align-items: center;
      gap: 16px;
      flex-wrap: wrap;
      min-width: 220px;
      justify-content: flex-end;
    }
    .navbar-right a {
      font-weight: 500;
      padding: 6px 14px;
      border-radius: 6px;
      transition: background-color 0.3s;
      white-space: nowrap;
      text-decoration: none;
    }
    .navbar-right a:hover { background: rgba(255,255,255,0.15); }

    .btn-orange {
      background-color: #f97316;
      padding: 8px 16px;
      border-radius: 8px;
      font-weight: 700;
      text-decoration: none;
      transition: background-color 0.3s;
    }
    .btn-orange:hover { background-color: #ff8c3f; }

    /* User info */
    .user-info {
      display: flex;
      flex-direction: column;
      text-align: right;
      line-height: 1.2;
      min-width: 150px;
      font-weight: 600;
      font-size: 0.95em;
      color: #fecd1a;
    }
    .user-info .username { font-weight: 700; margin-bottom: 2px; color: white; }
    .user-info .solde { font-weight: 600; font-size: 0.9em; color: #fecd1a; }

    /* Hamburger */
    .hamburger {
      display: none;
      flex-direction: column;
      justify-content: space-around;
      width: 26px;
      height: 22px;
      cursor: pointer;
      margin-left: 10px;
    }
    .hamburger span {
      width: 100%;
      height: 3px;
      background-color: white;
      border-radius: 2px;
      transition: transform 0.3s, opacity 0.3s;
    }
    .hamburger.open span:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
    .hamburger.open span:nth-child(2) { opacity: 0; }
    .hamburger.open span:nth-child(3) { transform: rotate(-45deg) translate(5px, -5px); }

    /* Menu mobile */
    .mobile-menu {
      display: none;
      position: absolute;
      top: 56px;
      left: 0;
      right: 0;
      background-color: #0e0038;
      border-radius: 0 0 8px 8px;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s ease;
      box-shadow: 0 4px 10px rgba(0,0,0,0.5);
      z-index: 999;
    }
    .mobile-menu.open { max-height: 600px; }
    .mobile-menu .section { border-bottom: 1px solid #444; padding: 12px 20px; }
    .mobile-menu a {
      display: block;
      padding: 10px 0;
      color: #fff;
      text-decoration: none;
      font-weight: 500;
    }
    .mobile-menu a:hover { background: rgba(255,255,255,0.15); }
    .mobile-menu .user-info { margin-bottom: 12px; font-weight: 600; color: #fecd1a; }

    @media (max-width: 768px){
      nav.navbar-menu, .navbar-right { display: none; }
      .hamburger { display: flex; }
      .mobile-menu { display: block; }
      .user-info { text-align: left; min-width: auto; }
    }
  </style>
</head>
