    .navbar-right a:hover { background: rgba(255,255,255,0.15); }
    .btn-orange { background-color: #f97316; padding: 8px 16px; border-radius: 8px; font-weight: 700; text-decoration: none; transition: background-color 0.3s; }
    .btn-orange:hover { background-color: #ff8c3f; }
    .user-info { display: flex; flex-direction: column; text-align: right; line-height: 1.2; min-width: 150px; font-weight: 600; font-size: 0.95em; color: #fecd1a; }
