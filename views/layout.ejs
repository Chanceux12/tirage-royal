    }
    nav.navbar-menu a {
      font-weight: 500;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background-color 0.3s;
    }
    nav.navbar-menu a:hover { background: rgba(255,255,255,0.15); }

    .dropdown-container { position: relative; display: inline-block; }
    .dropdown-btn {
      background: none;
      border: none;
      color: #fff;
      font-weight: 500;
      cursor: pointer;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background 0.3s;
    }
    .dropdown-btn:hover { background: rgba(255,255,255,0.15); }
    .dropdown-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background: #0e0038;
      min-width: 180px;
      border-radius: 6px;
      overflow: hidden;
      z-index: 1000;
    }
    .dropdown-menu a {
      display: block;
      padding: 10px 14px;
      color: #fff;
      text-decoration: none;
      transition: background 0.3s;
    }
    .dropdown-menu a:hover { background: rgba(255,255,255,0.15); }
    .dropdown-container:hover .dropdown-menu { display: block; }

    .navbar-right {
      display: flex; align-items: center; gap: 16px;
      flex-wrap: wrap; min-width: 220px; justify-content: flex-end;
    }
    .navbar-right a {
