  <script>
    const hamburger = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    hamburger.addEventListener('click', () => {
      hamburger.classList.toggle('open');
      mobileMenu.classList.toggle('open');
    });

    // Animation jetons
    const coinsContainer = document.querySelector('.casino-coins');
    for (let i = 0; i < 20; i++) {
      const coin = document.createElement('div');
      coin.classList.add('coin');
      coin.style.left = Math.random() * 100 + 'vw';
      coin.style.animationDuration = (1 + Math.random() * 2) + 's';
      coinsContainer.appendChild(coin);
    }

    // Loader hide
    window.addEventListener('load', () => {
      const loader = document.getElementById('casino-loader');
      setTimeout(() => loader.style.opacity = '0', 800);
      setTimeout(() => loader.style.display = 'none', 1300);
    });

    // Loader on link click
    document.querySelectorAll('a[href]').forEach(link => {
      link.addEventListener('click', e => {
        const url = link.getAttribute('href');
        if (!url.startsWith('#') && !url.startsWith('javascript') && url !== window.location.pathname) {
          document.getElementById('casino-loader').style.display = 'flex';
          document.getElementById('casino-loader').style.opacity = '1';
        }
      });
    });
  </script>
