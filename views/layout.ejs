    /* -------------------------
       LOADER LUXUEUX (AJOUT)
       100% CSS - animation dorée fluide
       ------------------------- */

    /* Fond légèrement bleuté, laisse deviner la page derrière */
    #loader {
      position: fixed;
      inset: 0;
      background: rgba(8, 0, 50, 0.78); /* bleu nuit transparent */
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      z-index: 99999;
      backdrop-filter: blur(5px);
      transition: opacity 0.9s ease, visibility 0.9s ease;
    }

    /* conteneur du cercle et des effets */
    .loader-wrap {
      position: relative;
      width: 170px;
      height: 170px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* anneau principal doré (créé en CSS) */
    .gold-ring {
      position: relative;
      width: 140px;
      height: 140px;
      border-radius: 50%;
      background: conic-gradient(from 0deg,
        rgba(255,215,0,0.95) 0deg 25deg,
        rgba(255,200,60,0.85) 25deg 45deg,
        rgba(255,215,0,0.6) 45deg 90deg,
        rgba(255,200,50,0.4) 90deg 220deg,
        rgba(255,215,0,0.9) 220deg 360deg);
      filter: drop-shadow(0 0 18px rgba(255,200,60,0.35));
      mask: radial-gradient(circle, transparent 60px, black 61px);
      -webkit-mask: radial-gradient(circle, transparent 60px, black 61px);
      box-shadow: inset 0 0 18px rgba(255,240,180,0.15);
      animation: ringSkew 2.2s linear infinite;
      transform-origin: center;
    }

    /* bande lumineuse qui parcourt l'anneau pour effet fluide */
    .gold-ring::after {
      content: "";
      position: absolute;
      width: 30%;
      height: 30%;
      top: -5%;
      left: 50%;
      transform: translateX(-50%);
      background: radial-gradient(circle at 30% 30%, rgba(255,255,220,0.95), rgba(255,220,120,0.7) 40%, transparent 60%);
      filter: blur(6px);
      animation: shine 2.2s linear infinite;
      border-radius: 50%;
      mix-blend-mode: screen;
    }

    /* halo global */
    .ring-halo {
      position: absolute;
      width: 220px;
      height: 220px;
      border-radius: 50%;
      background: radial-gradient(circle at 50% 50%, rgba(255,215,0,0.06), transparent 40%);
      filter: blur(22px);
      pointer-events: none;
      animation: haloPulse 3.6s ease-in-out infinite;
    }

    /* petit éclat ponctuel (bas gauche) */
    .spark {
      position: absolute;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background: radial-gradient(circle, #fff9d6 0%, rgba(255,220,120,0.95) 40%, rgba(255,200,60,0.7) 60%, transparent 70%);
      filter: blur(1px);
      box-shadow: 0 0 18px rgba(255,220,120,0.9);
      left: 22%;
      top: 68%;
      transform: translate(-50%, -50%);
      animation: sparkMove 2.2s linear infinite;
    }

    /* texte "TIRAGE ROYAL" stylé */
    .loader-text {
      margin-top: 18px;
      font-size: 1.4rem;
      color: #f7d46a;
      letter-spacing: 4px;
      font-weight: 700;
      font-family: "Segoe UI", "Cinzel", serif;
      text-shadow: 0 0 12px rgba(255,215,0,0.55);
      animation: textPulse 1.8s ease-in-out infinite;
    }

    /* petites responsive */
    @media (max-width:480px) {
      .loader-wrap { width: 120px; height: 120px; }
      .gold-ring { width: 100px; height: 100px; }
      .ring-halo { width: 160px; height: 160px; filter: blur(16px); }
      .loader-text { font-size: 1.05rem; letter-spacing: 3px; }
    }

    /* animations */
    @keyframes ringSkew {
      0% { transform: rotate(0deg) scale(1); filter: drop-shadow(0 0 18px rgba(255,200,60,0.35)); }
      50% { transform: rotate(180deg) scale(0.995); }
      100% { transform: rotate(360deg) scale(1); }
    }

    @keyframes shine {
      0% { transform: rotate(0deg) translateX(-50%) translateY(-2%) ; opacity: 1; }
      50% { transform: rotate(180deg) translateX(-50%) translateY(4%); opacity: 0.65; }
      100% { transform: rotate(360deg) translateX(-50%) translateY(-2%); opacity: 1; }
    }

    @keyframes haloPulse {
      0% { transform: scale(0.98); opacity: 0.9; }
      50% { transform: scale(1.02); opacity: 0.7; }
      100% { transform: scale(0.98); opacity: 0.9; }
    }

    @keyframes sparkMove {
      0% { transform: translate(-50%, -50%) scale(1) rotate(0deg); opacity: 1; }
      50% { transform: translate(-30%, -60%) scale(0.95) rotate(20deg); opacity: 0.8; }
      100% { transform: translate(-50%, -50%) scale(1) rotate(0deg); opacity: 1; }
    }

    @keyframes textPulse {
      0%,100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.04); opacity: 0.65; }
    }

    /* masquer le loader quand body a la classe loaded */
    body.loaded #loader {
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    /* effet d'apparition du contenu principal (fade-in) */
    main {
      opacity: 0;
      transform: translateY(8px);
      transition: opacity 0.9s ease, transform 0.9s ease;
    }
    body.loaded main {
      opacity: 1;
      transform: translateY(0);
    }

    /* -------------------------
       FIN LOADER
       ------------------------- */

  </style>
</head>
