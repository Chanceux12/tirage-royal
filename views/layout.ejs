<!-- SCRIPT: supprimer loader après chargement + fallback -->
<script>
  // navigation hamburger (déjà présent)
  // (conserver l'existant)
  // On ajoute la logique de fermeture du loader quand la page est complètement chargée
  window.addEventListener('load', () => {
    // ajoute la classe pour transition fade-out et fade-in du main
    document.body.classList.add('loaded');

    // retirer complètement l'élément loader du DOM après la transition
    setTimeout(() => {
      const l = document.getElementById('loader');
      if (l && l.parentNode) l.parentNode.removeChild(l);
    }, 1000); // délai légèrement supérieur à la transition CSS
  });

  // En cas d'erreur ou si 'load' ne se déclenche pas (ex: ressources lentes),
  // fallback pour enlever loader au bout de 8s
  setTimeout(() => {
    if (!document.body.classList.contains('loaded')) {
      document.body.classList.add('loaded');
      const l = document.getElementById('loader');
      if (l && l.parentNode) l.parentNode.removeChild(l);
    }
  }, 8000);
</script>

