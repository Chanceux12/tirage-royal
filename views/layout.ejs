    /* === LOADER CASINO === */
    #casino-loader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: radial-gradient(circle at center, #0e0038 10%, #000 90%);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      z-index: 9999;
      transition: opacity 0.5s ease, visibility 0.5s ease;
    }

    #casino-loader.hidden {
      opacity: 0;
      visibility: hidden;
    }

    .slot {
      display: flex;
      background: linear-gradient(145deg, #1a1a1a, #000);
      border: 4px solid gold;
      border-radius: 12px;
      padding: 10px 25px;
      box-shadow: 0 0 30px rgba(255, 215, 0, 0.3);
      overflow: hidden;
      margin-bottom: 20px;
    }

    .digit {
      font-size: 4rem;
      font-weight: bold;
      color: gold;
      width: 60px;
      text-align: center;
      animation: spin 1s infinite linear;
    }

    @keyframes spin {
      0% { transform: translateY(0); }
      25% { transform: translateY(-10px); }
      50% { transform: translateY(10px); }
      75% { transform: translateY(-5px); }
      100% { transform: translateY(0); }
    }

    .jeton {
      position: absolute;
      width: 30px;
      height: 30px;
      background: radial-gradient(circle, gold 40%, #2e2e2e 80%);
      border-radius: 50%;
      border: 2px solid #f5d142;
      box-shadow: 0 0 10px rgba(255,215,0,0.5);
      animation: fall 2.5s linear infinite;
      opacity: 0.8;
    }

    @keyframes fall {
      0% { transform: translateY(-10vh) rotate(0deg); opacity: 1; }
      100% { transform: translateY(110vh) rotate(360deg); opacity: 0; }
    }

    .loading-text {
      font-size: 1.5rem;
      color: gold;
      letter-spacing: 3px;
    }

    /* === NAVBAR === */
