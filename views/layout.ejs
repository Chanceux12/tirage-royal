    .footer-col ul li a { text-decoration: none; color: #fff; transition: 0.3s; }
    .footer-col ul li a:hover { color: #10b981; }
    .footer-accordeon { display: none; }
    .acc-btn { background: none; border: none; color: #fff; font-weight: bold; cursor: pointer; width: 100%; text-align: left; padding: 0.5rem 0; }
    .acc-content { display: none; list-style: none; padding: 0; margin: 0; }
    .acc-content li { padding: 0.4rem 0; }
    @media(max-width:900px){
      .footer-columns { display: none; }
      .footer-accordeon { display: block; }
    }
  </style>
