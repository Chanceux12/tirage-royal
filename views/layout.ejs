<!-- SCRIPT: supprimer loader aprÃ¨s chargement + fallback -->
<script>
  // navigation hamburger (dÃ©jÃ  prÃ©sent)
  // (conserver l'existant)
  // On ajoute la logique de fermeture du loader quand la page est complÃ¨tement chargÃ©e
  window.addEventListener('load', () => {
    // ajoute la classe pour transition fade-out et fade-in du main
    document.body.classList.add('loaded');

    // retirer complÃ¨tement l'Ã©lÃ©ment loader du DOM aprÃ¨s la transition
    setTimeout(() => {
      const l = document.getElementById('loader');
      if (l && l.parentNode) l.parentNode.removeChild(l);
    }, 1000); // dÃ©lai lÃ©gÃ¨rement supÃ©rieur Ã  la transition CSS
  });

  // En cas d'erreur ou si 'load' ne se dÃ©clenche pas (ex: ressources lentes),
  // fallback pour enlever loader au bout de 8s
  setTimeout(() => {
    if (!document.body.classList.contains('loaded')) {
      document.body.classList.add('loaded');
      const l = document.getElementById('loader');
      if (l && l.parentNode) l.parentNode.removeChild(l);
    }
  }, 8000);
</script>

